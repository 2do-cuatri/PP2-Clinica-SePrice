<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StudyNFActivity"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txtStudyNF"
        android:layout_width="370dp"
        android:layout_height="35dp"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="20dp"
        android:layout_weight="3"
        android:fontFamily="@font/atma"
        android:text="Estudio no encontrado"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="#CA2317"
        android:textSize="30sp"
        android:gravity="center"/>

    <Button
        android:id="@+id/btnBackSV"
        android:layout_width="260dp"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="70dp"
        android:layout_weight="1"
        android:backgroundTint="#ffc9c9"
        android:fontFamily="@font/atma"
        android:includeFontPadding="true"
        android:text="Volver"
        android:textAlignment="center"
        android:textColor="#041120"
        android:textSize="24sp" />

</LinearLayout>