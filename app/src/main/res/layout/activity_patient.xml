<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PatientActivity"
    android:gravity="center"
    android:orientation="vertical">


    <EditText
        android:id="@+id/txtNombreP"
        android:text=""
        android:fontFamily="@font/atma"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        android:textAlignment="center"
        android:layout_width="260dp"
        android:layout_height="20dp"
        android:layout_marginTop="70dp"
        android:layout_marginBottom="10dp"
        android:layout_weight="1"
        android:background="@drawable/rounded" />

    <EditText
        android:id="@+id/txtDNIP"
        android:text="DNI"
        android:fontFamily="@font/atma"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:textAlignment="center"
        android:layout_width="260dp"
        android:layout_height="20dp"
        android:layout_margin="10dp"
        android:layout_weight="1"
        android:background="@drawable/rounded" />

    <EditText
        android:id="@+id/txtSocialNP"
        android:text=""
        android:fontFamily="@font/atma"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:textAlignment="center"
        android:layout_width="260dp"
        android:layout_height="20dp"
        android:layout_margin="10dp"
        android:layout_weight="1"
        android:background="@drawable/rounded" />

    <TextView
        android:id="@+id/txtAppointmentsAndStudies"
        android:layout_width="360dp"
        android:layout_height="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_weight="1"
        android:fontFamily="@font/atma"
        android:text="Turnos y Estudios vigentes"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="#0C0C0C"
        android:textSize="24sp" />

    <ListView
        android:layout_width="260dp"
        android:layout_height="156dp"
        android:layout_weight="3"
        android:fontFamily="@font/atma"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textColor="#C61414"/>



    <Button
        android:id="@+id/btnBackAdm"
        android:text="Volver"
        android:fontFamily="@font/atma"
        android:textColor="#041120"
        android:textSize="24sp"
        android:textAlignment="center"
        android:includeFontPadding="true"
        android:layout_width="260dp"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="70dp"
        android:layout_weight="1"
        android:backgroundTint="#ffc9c9" />

</LinearLayout>