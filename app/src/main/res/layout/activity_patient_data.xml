<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PatientDataActivity"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txtPatientData"
        android:text="Datos del Paciente"
        android:fontFamily="@font/atma"
        android:textColor="#0C0C0C"
        android:textSize="30sp"
        android:textAlignment="center"
        android:layout_width="260dp"
        android:layout_height="40dp"
        android:layout_marginTop="70dp"
        android:layout_marginBottom="40dp"
        android:layout_weight="1" />

    <EditText
        android:id="@+id/txtNombrePD"
        android:text="Nombre"
        android:fontFamily="@font/atma"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:textAlignment="center"
        android:layout_width="260dp"
        android:layout_height="20dp"
        android:layout_margin="10dp"
        android:layout_weight="1"
        android:background="@drawable/rounded" />

    <EditText
        android:id="@+id/txtApellidoPD"
        android:text="Apellido"
        android:fontFamily="@font/atma"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:textAlignment="center"
        android:layout_width="260dp"
        android:layout_height="20dp"
        android:layout_margin="10dp"
        android:layout_weight="1"
        android:background="@drawable/rounded" />

    <EditText
        android:id="@+id/txtDNIPD"
        android:text="DNI"
        android:fontFamily="@font/atma"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:textAlignment="center"
        android:layout_width="260dp"
        android:layout_height="20dp"
        android:layout_margin="10dp"
        android:layout_weight="1"
        android:background="@drawable/rounded" />

    <EditText
        android:id="@+id/txtSocialNumberPD"
        android:text="Nro Obra Social"
        android:fontFamily="@font/atma"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:textAlignment="center"
        android:layout_width="260dp"
        android:layout_height="20dp"
        android:layout_margin="10dp"
        android:layout_weight="1"
        android:background="@drawable/rounded" />

    <Button
        android:id="@+id/btnContinuePD"
        android:text="Continuar"
        android:fontFamily="@font/atma"
        android:textColor="#041120"
        android:textSize="30sp"
        android:textAlignment="center"
        android:layout_width="260dp"
        android:layout_height="30dp"
        android:layout_marginTop="90dp"
        android:layout_marginBottom="20dp"
        android:layout_weight="1.5"
        android:backgroundTint="#b2f2bb" />

    <Button
        android:id="@+id/btnBackPD"
        android:text="Volver"
        android:fontFamily="@font/atma"
        android:textSize="24sp"
        android:textColor="#0c0c0c"
        android:textAlignment="center"
        android:layout_width="260dp"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="70dp"
        android:layout_weight="1"
        android:backgroundTint="#E3C5E8"
        android:includeFontPadding="true" />

</LinearLayout>