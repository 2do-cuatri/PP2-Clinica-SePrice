<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdmissionActivity"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:layout_width="370dp"
        android:layout_height="35dp"
        android:layout_marginTop="70dp"
        android:layout_marginBottom="70dp"
        android:layout_weight="1.5"
        android:fontFamily="@font/atma"
        android:text="Ingreso Pacientes"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="#0C0C0C"
        android:textSize="45sp" />

    <EditText
        android:inputType="text"
        android:hint="DNI"
        android:fontFamily="@font/atma"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        android:textAlignment="center"
        android:layout_width="260dp"
        android:layout_height="20dp"
        android:layout_margin="10dp"
        android:layout_weight="1"
        android:background="@drawable/rounded" />

    <EditText
        android:inputType="text"
        android:hint="Nro Obra Social"
        android:fontFamily="@font/atma"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        android:textAlignment="center"
        android:layout_width="260dp"
        android:layout_height="20dp"
        android:layout_margin="10dp"
        android:layout_weight="1"
        android:background="@drawable/rounded" />

    <Button
        android:id="@+id/btnFindPatient"
        android:text="Buscar Paciente"
        android:fontFamily="@font/atma"
        android:textColor="#041120"
        android:textSize="40sp"
        android:textAlignment="center"
        android:includeFontPadding="true"
        android:layout_width="260dp"
        android:layout_height="30dp"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="70dp"
        android:layout_weight="1.5"
        android:backgroundTint="#b2f2bb" />

</LinearLayout>