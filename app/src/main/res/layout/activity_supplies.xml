<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:id="@+id/mainLayout">


    <TextView
        android:id="@+id/txtLaboratory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="100dp"

        android:fontFamily="@font/atma"
        android:text="Insumos"
        android:textAlignment="center"
        android:textColor="#0c0c0c"
        android:textSize="60dp" />

    <GridLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:columnCount="2"
    android:rowCount="2"
    android:padding="20dp">

    <com.example.cnicaseprice.ToggleCard
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        app:cardCornerRadius="4dp"
        app:cardElevation="2dp"
        app:isChecked="false"
        android:id= "@+id/insumo_a_card">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_gravity="center"
            >

            <TextView
                android:id="@+id/text_view_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="Insumo A"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/cant_insumo_a_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="0/50"
                android:textColor="@color/black"/>

        </LinearLayout>

    </com.example.cnicaseprice.ToggleCard>

    <com.example.cnicaseprice.ToggleCard
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="0"
        android:layout_column="1"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        app:cardCornerRadius="4dp"
        app:cardElevation="2dp"
        app:isChecked="false"
        android:id= "@+id/insumo_b_card">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_gravity="center"
            >

            <TextView
                android:id="@+id/text_view_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Insumo B"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/cant_insumo_b_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0/50"
                android:textColor="@color/black"/>

        </LinearLayout>

    </com.example.cnicaseprice.ToggleCard>

    <com.example.cnicaseprice.ToggleCard
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="1"
        android:layout_column="0"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        app:cardCornerRadius="4dp"
        app:cardElevation="2dp"
        app:isChecked="false"
        android:id= "@+id/insumo_c_card">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_gravity="center">

            <TextView
                android:id="@+id/text_view_5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Insumo C"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/cant_insumo_c_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0/50"
                android:textColor="@color/black"/>

        </LinearLayout>

    </com.example.cnicaseprice.ToggleCard>

    <com.example.cnicaseprice.ToggleCard
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="1"
        android:layout_column="1"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        app:cardCornerRadius="4dp"
        app:cardElevation="2dp"
        app:isChecked="false"
        android:id= "@+id/insumo_d_card">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_gravity="center">

            <TextView
                android:id="@+id/text_view_7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Insumo D"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/cant_insumo_d_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0/50"
                android:textColor="@color/black"/>

        </LinearLayout>

    </com.example.cnicaseprice.ToggleCard>

    </GridLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="20dp">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Reponer todos"
            android:layout_marginEnd="16dp"
            android:id="@+id/restock_btn"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Utilizar Seleccionados"
            android:id="@+id/use_selected_btn"/>

    </LinearLayout>





</LinearLayout>