<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".StudyActivity"
    android:gravity="center">

    <EditText
        android:id="@+id/txtDate"
        style="@style/inputBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Fecha"
        android:inputType="date" />

    <EditText
        android:id="@+id/txtTime"
        style="@style/inputBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Hora"
        android:inputType="time" />

    <EditText
        android:id="@+id/txtFirstName"
        style="@style/inputBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nombre" />

    <EditText
        android:id="@+id/txtLastName"
        style="@style/inputBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Apellido" />

    <EditText
        android:id="@+id/txtDni"
        style="@style/inputBtn"
        android:hint="DNI" />

    <EditText
        android:id="@+id/txtSocialNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_weight="1"
        android:background="@drawable/rounded"
        android:fontFamily="@font/atma"
        android:hint="Nro Obra Social"
        android:inputType="text"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="30sp" />



    <Button
        android:id="@+id/btnSetAppointment"
        android:text="CONTINUAR"
        android:fontFamily="@font/atma"
        android:textColor="#041120"
        android:textSize="30sp"
        android:textAlignment="center"
        android:layout_width="260dp"
        android:layout_height="30dp"
        android:layout_marginTop="90dp"
        android:layout_marginBottom="20dp"
        android:layout_weight="2"
        android:backgroundTint="#b2f2bb" />

    <Button
        android:id="@+id/btnBackAppointments"
        android:text="VOLVER"
        android:fontFamily="@font/atma"
        android:textSize="24sp"
        android:textColor="#0c0c0c"
        android:textAlignment="center"
        android:layout_width="260dp"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="70dp"
        android:layout_weight="1"
        android:backgroundTint="#E3C5E8"
        android:includeFontPadding="true"/>

</LinearLayout>