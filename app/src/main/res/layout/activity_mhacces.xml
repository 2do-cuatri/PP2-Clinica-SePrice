<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MHAccessActivity"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txtMHAcces"
        android:layout_width="370dp"
        android:layout_height="35dp"
        android:layout_marginTop="70dp"
        android:layout_marginBottom="30dp"
        android:layout_weight="1.5"
        android:fontFamily="@font/atma"
        android:text="Acceso Historia ClÃ­nica"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="#0C0C0C"
        android:textSize="45sp" />

    <TextView
        android:id="@+id/txtSocialNumber"
        android:text="Ingresar datos del paciente"
        android:fontFamily="@font/atma"
        android:textColor="#0C0C0C"
        android:textSize="30sp"
        android:textAlignment="center"
        android:layout_width="260dp"
        android:layout_height="20dp"
        android:layout_margin="10dp"
        android:layout_weight="1"
        android:background="@drawable/rounded" />

    <EditText
        android:id="@+id/txtDni"
        android:inputType="text"
        android:hint="DNI"
        android:fontFamily="@font/atma"
        android:textColor="#000000"
        android:textSize="30sp"
        android:textAlignment="center"
        android:layout_width="260dp"
        android:layout_height="20dp"
        android:layout_margin="10dp"
        android:layout_weight="1"
        android:background="@drawable/rounded" />

    <Button
        android:id="@+id/btnContinue"
        android:text="Continuar"
        android:fontFamily="@font/atma"
        android:textColor="#041120"
        android:textSize="30sp"
        android:textAlignment="center"
        android:includeFontPadding="true"
        android:layout_width="260dp"
        android:layout_height="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_weight="1.5"
        android:backgroundTint="#b2f2bb" />

    <Button
        android:id="@+id/btnBackDP"
        android:text="Volver"
        android:fontFamily="@font/atma"
        android:textSize="24sp"
        android:textColor="#0c0c0c"
        android:textAlignment="center"
        android:layout_width="260dp"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="70dp"
        android:layout_weight="0.5"
        android:backgroundTint="#E3C5E8"
        android:includeFontPadding="true" />

</LinearLayout>